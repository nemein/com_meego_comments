<?xml version="1.0" encoding="UTF-8"?>
<Schema xmlns="http://www.midgard-project.org/repligard/1.4">

    <view name="comments_author" table="com_meego_comments_comment">
        <join type="left" class="midgard_person">
            <condition left="com_meego_comments_comment:metadata.creator" right="midgard_person:guid" />
        </join>
        <property name="author_firstname" use="midgard_person:firstname" />
        <property name="author_lastname" use="midgard_person:lastname" />
    </view>

</Schema>
